#include <stdio.h>
#include <math.h>
#include<locale.h>

int main() {
    setlocale(LC_CTYPE, "RUS");
    int n;          
    double x;       
    double sum = 0; 
    double term;    

    
    printf("Введите натуральное число n: ");
    scanf("%d", &n);

    printf("Введите действительное число x: ");
    scanf("%lf", &x);

    
    if (n <= 0) {
        printf("Ошибка: n должно быть натуральным числом (n > 0)\n");
        return 1;
    }

    
    for (int i = 1; i <= n; i++) {
        term = sin(pow(x, i));  
        sum += term;            
        printf("sin(x^%d) = sin(%.2f^%d) = sin(%.2f) = %.6f\n",
            i, x, i, pow(x, i), term);
    }


    printf("\nРезультат:\n");
    printf("sin(x) + sin(x^2) + ... + sin(x^%d) = %.6f\n", n, sum);

    return 0;
}
